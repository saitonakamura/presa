{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "precommit": "lint-staged",
    "types": "tsc --noEmit --pretty",
    "lint": "eslint",
    "format": "prettier --write packages",
    "clean": "yarn workspaces run clean"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.0"
  }
}
